{
  "name": "storyblok-rich-text",
  "version": "1.0.0",
  "description": "Repository for Storyblok's rich-text renderer",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "prebuild": "yarn test",
    "lint": "eslint --fix packages/**/*.ts packages/**/*.vue",
    "test": "lerna run test:unit",
    "commit": "git cz",
    "release": "yarn prebuild && yarn build && lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarvinRudolph/storyblok-rich-text-renderer.git"
  },
  "author": {
    "name": "Marvin Rudolph",
    "email": "info@marvin-rudolph.de"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MarvinRudolph/storyblok-rich-text/issues"
  },
  "homepage": "https://storyblok-rich-text-renderer.netlify.com",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "rimraf": "^3.0.2",
    "standard-version": "^7.1.0",
    "typescript": "~3.7.5"
  },
  "dependencies": {
    "core-js": "^3.6.4"
  }
}

{
  "compilerOptions": {
    "sourceMap": false,
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "jest",
      "node"
    ],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@marvr/*": ["packages/*/src"]
    }
  },
  "files": [
    "plugin.d.ts",
    "shims-vue.d.ts",
    "shims-tsx.d.ts"
  ],
  "include": [
    "packages/*/src",
    "packages/*/__tests__",
    "tests"
  ]
}

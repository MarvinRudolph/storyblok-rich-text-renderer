{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["esnext"],
    "types": ["node", "jest"],
    "rootDir": ".",
    "isolatedModules": true,
    "paths": {
      "@marvr/*": ["packages/*/src"]
    }
  },
  "include": ["packages/*/src", "packages/*/__tests__"]
}
